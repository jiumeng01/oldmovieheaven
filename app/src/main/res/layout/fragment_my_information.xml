<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:background="#f6f6f6">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/fragment_my_information_head"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/my_message"
                    style="@style/option_item_rl"
                    android:background="@drawable/selector_item_list">

                    <ImageView
                        style="@style/option_item_img"
                        android:background="@drawable/icon_my_message"
                        android:contentDescription="@null"/>

                    <TextView
                        style="@style/option_item_text"
                        android:text="我的消息"/>

                </LinearLayout>

                <View
                    style="@style/h_line"
                    android:layout_height="1px"
                    android:layout_marginBottom="1px"
                    android:layout_marginLeft="14dp"
                    android:background="@color/list_divider_color"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <View
                    style="@style/h_line"
                    android:layout_height="1px"
                    android:layout_marginBottom="1px"
                    android:layout_marginLeft="14dp"
                    android:background="@color/list_divider_color"/>

                <LinearLayout
                    android:id="@+id/my_favorites"
                    style="@style/option_item_rl"
                    android:background="@drawable/selector_item_list">

                    <ImageView
                        style="@style/option_item_img"
                        android:background="@drawable/icon_my_note"
                        android:contentDescription="@null"/>

                    <TextView
                        style="@style/option_item_text"
                        android:text="我的收藏"/>
                </LinearLayout>

                <View
                    style="@style/h_line"
                    android:layout_height="1px"
                    android:layout_marginBottom="1px"
                    android:layout_marginLeft="14dp"
                    android:background="@color/list_divider_color"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/recommend"
                    style="@style/option_item_rl"
                    android:background="@drawable/selector_item_list">

                    <ImageView
                        style="@style/option_item_img"
                        android:background="@drawable/icon_my_team"
                        android:contentDescription="@null"/>

                    <TextView
                        style="@style/option_item_text"
                        android:text="推荐给好友"/>
                </LinearLayout>

                <View
                    style="@style/h_line"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginBottom="1px"
                    android:layout_marginLeft="14dp"
                    android:background="@color/list_divider_color"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/feedback"
                style="@style/option_item_rl"
                android:layout_marginBottom="18dp"
                android:background="@drawable/selector_item_list">

                <ImageView
                    style="@style/option_item_img"
                    android:background="@drawable/ic_feedback"
                    android:contentDescription="@null"/>

                <TextView
                    style="@style/option_item_text"
                    android:text="意见反馈"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical">

                <View
                    style="@style/h_line"
                    android:layout_height="1px"
                    android:layout_marginBottom="1px"
                    android:layout_marginLeft="14dp"
                    android:background="@color/list_divider_color"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/isloadimage"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_list"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/space_12">

                        <ImageView
                            style="@style/option_item_img"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/ic_my_setup"
                            android:contentDescription="@null"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="无图"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/list_divider_color"/>

                    <LinearLayout
                        android:id="@+id/night_mode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_list"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/space_12">

                        <ImageView
                            style="@style/option_item_img"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/ic_my_setup"
                            android:contentDescription="@null"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="夜间"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <View
                        android:layout_width="1px"
                        android:layout_height="match_parent"
                        android:background="@color/list_divider_color"/>

                    <LinearLayout
                        android:id="@+id/ll_setting"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/selector_item_list"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/space_12">

                        <ImageView
                            style="@style/option_item_img"
                            android:layout_marginRight="0dp"
                            android:background="@drawable/ic_my_setup"
                            android:contentDescription="@null"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:text="设置"
                            android:textColor="#333333"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
    </ScrollView>


</FrameLayout>