<?xml version="1.0" encoding="utf-8"?>
<com.jiumeng.movieheaven.views.CustomerScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@drawable/day_list_item_background"
    android:orientation="vertical"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            style="@style/h_line"
            android:layout_marginTop="20dip"/>

        <RelativeLayout
            style="@style/option_item_rl">


            <TextView
                style="@style/option_item_text_parent"
                android:text="接收新通知"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"/>

            <com.jiumeng.movieheaven.views.ToggleButton
                android:id="@+id/tb_accept"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <View
            style="@style/h_line"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="声音"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"/>

            <com.jiumeng.movieheaven.views.ToggleButton
                android:id="@+id/tb_voice"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <RelativeLayout
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="震动"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"/>

            <com.jiumeng.movieheaven.views.ToggleButton
                android:id="@+id/tb_vibration"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            style="@style/h_line"/>

        <View
            style="@style/h_line"
            android:layout_marginTop="20dp"/>

        <RelativeLayout
            style="@style/option_item_rl">

            <TextView
                style="@style/option_item_text_parent"
                android:text="退出后不提醒"
                android:textColor="@color/main_black"
                android:textSize="@dimen/text_size_16"/>

            <com.jiumeng.movieheaven.views.ToggleButton
                android:id="@+id/tb_app_exit"
                android:layout_width="45dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <View
            style="@style/h_line"/>
    </LinearLayout>

</com.jiumeng.movieheaven.views.CustomerScrollView>